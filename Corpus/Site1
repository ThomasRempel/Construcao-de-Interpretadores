from bs4 import BeautifulSoup
import requests

sentenca1 = ''
arraySentencas1 = []


url1 = "https://www.tutorialspoint.com/artificial_intelligence/artificial_intelligence_natural_language_processing.htm"


dadosPagina1 = requests.get(url1)
html1 = BeautifulSoup(dadosPagina1.text, 'html.parser')

#Se desejar printar o código html da url apenas descomentar a linha a seguir, eu achei desnecessário
#print(soup)

for sentenca1 in html1.find_all("p"):
    arraySentencas1.append(sentenca1.get_text())
    print(sentenca1.get_text())
    

# Print do Array
print('\n', 'Lista de sentenças: ', arraySentencas1)
