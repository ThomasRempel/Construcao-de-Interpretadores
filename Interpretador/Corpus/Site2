sentenca2 = ''
arraySentencas2 = []


url2 = "https://hbr.org/2022/04/the-power-of-natural-language-processing"


dadosPagina2 = requests.get(url2)
html2 = BeautifulSoup(dadosPagina2.text, 'html.parser')

#Se desejar printar o código html da url apenas descomentar a linha a seguir, eu achei desnecessário
#print(soup)

for sentenca2 in html2.find_all("p"):
    arraySentencas2.append(sentenca2.get_text())
    print(sentenca2.get_text())
    

# Print do Array
print('\n', 'Lista de sentenças: ', arraySentencas2)
